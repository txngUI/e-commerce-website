{% extends 'base.html.twig' %}
{% block body %}
				<header id="header" class="col-full">
					<div id="logo">
						<h1 class="site-title" style="margin-right:50px;display:flex;align-items:center;">Amazaun</h1>
					</div>
				</header>
				<body>

					<div class="container-paiement">
						<h2>Confirmation du paiement</h2>
						<form id="payment-form" action="/viderPanier" method="POST">
							<div class="form-group"  >
								<label for="card-number">Numéro de Carte:</label>
								<input type="text" id="card-number" placeholder="1234 5678 9012 3456" required>
							</div>
							<div class="form-group">
								<label for="card-holder">Titulaire de la Carte:</label>
								<input type="text" id="card-holder" placeholder="Nom Complet" required>
							</div>
							<div class="form-group">
								<label for="expiry-date">Date d'Expiration:</label>
								<select id="month_expiration" name="month">
									{% for month in 1..12 %}
										<option>{{ month }}</option>
									{% endfor %}	
								</select>
								<select id="year_expiration" name="year">
									{% for year in 2022..2070 %}
										<option>{{ year }}</option>
									{% endfor %}
								</select>
							</div>
							<div class="form-group">
								<label for="cvv">CVV:</label>
								<input type="text" id="cvv" placeholder="123" required>
							</div>
							<div class="input-paiement">
								<label for="amount">Montant à payer</label>
								<input type="text" id="amount" name="amount" value="{{ app.request.query.get('amount') }}" readonly><br><br>
							</div>
							<button type="submit">Valider le Paiement</button>
						</form>
					</div>
				</body>
{% endblock %}
